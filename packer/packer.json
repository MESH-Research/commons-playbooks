{
  "variables": {
    "AWS_ACCESS_KEY_ID": "{{env `AWS_ACCESS_KEY_ID`}}",
    "AWS_SECRET_ACCESS_KEY": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "AWS_SECURITY_GROUP": "sg-ceb3b8ab",
    "AWS_SUBNET_ID": "subnet-0d3ef154",
    "BUILD_SLUG": "commons-dev",
    "BUILD_VERSION": "0.1.0",
    "SOURCE_AMI": "ami-7172991a",
    "SOURCE_ISO": "http://releases.ubuntu.com/14.04.2/ubuntu-14.04.2-server-amd64.iso",
    "TIME_STAMP": "{{isotime \"2006-01-02-15-04-05\"}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `AWS_ACCESS_KEY_ID`}}",
      "ami_name": "{{user `BUILD_SLUG`}}-{{user `TIME_STAMP`}}",
      "associate_public_ip_address": true,
      "iam_instance_profile": "commons-dev",
      "instance_type": "t2.small",
      "region": "us-east-1",
      "secret_key": "{{user `AWS_SECRET_ACCESS_KEY`}}",
      "security_group_ids": ["{{user `AWS_SECURITY_GROUP`}}"],
      "ssh_username": "ubuntu",
      "source_ami": "{{user `SOURCE_AMI`}}",
      "subnet_id": "{{user `AWS_SUBNET_ID`}}",
      "tags": {
        "Name": "{{user `BUILD_SLUG`}}",
        "Project": "commons"
      }
    },
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname=vagrant<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "headless": true,
      "disk_size": 10140,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Ubuntu_64",
      "http_directory": "http",
      "iso_checksum": "8acd2f56bfcba2f7ac74a7e4a5e565ce68c024c38525c0285573e41c86ae90c0",
      "iso_checksum_type": "sha256",
      "iso_url": "{{ user `SOURCE_ISO` }}",
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "1024"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{user `BUILD_SLUG`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "scripts": [
        "scripts/sudo-passwd.sh",
        "scripts/ansible-ubuntu.sh"
      ]
    },
    {
      "type": "file",
      "source": "../ansible/ansible.cfg",
      "destination": "~/.ansible.cfg"
    },
    {
      "type": "ansible-local",
      "playbook_file": "../ansible/development.yml",
      "playbook_dir": "../ansible",
      "override": {
        "amazon-ebs": {
          "extra_arguments": [
            "--skip-tags=aws-credentials,dnsmasq"
          ]
        },
        "virtualbox-iso": {
          "extra_arguments": [
            "--skip-tags=aws-route53,aws-user-data"
          ]
        }
      }
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "scripts": [
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": "9",
        "output": "builds/boxes/{{user `BUILD_SLUG`}}-{{.Provider}}-{{user `BUILD_VERSION`}}.box"
      }
    ]
  ]
}
